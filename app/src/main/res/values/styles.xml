<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/backgroundPrimary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="KeyBoardNumberButton">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:background">@color/backgroundKeyBoard</item>
        <item name="android:textSize">36sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="KeyBoardFormulaButton">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:background">@color/backgroundKeyBoard</item>
        <item name="android:textSize">24sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>
